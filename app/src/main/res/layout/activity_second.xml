<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <ImageView
            android:id="@+id/iconStudies"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_school"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/studiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudios"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconStudies"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/studiesText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Instituto Superior Villa del Rosario"
            app:layout_constraintTop_toBottomOf="@id/studiesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/iconExperience"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_work"
            app:layout_constraintTop_toBottomOf="@id/studiesText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/experienceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiencia"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/iconExperience"
            app:layout_constraintStart_toEndOf="@id/iconExperience"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PasantÃ­as en GoodApps"
            app:layout_constraintTop_toBottomOf="@id/experienceTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/iconSkills"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_code"
            app:layout_constraintTop_toBottomOf="@id/experienceText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/skillsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conocimientos"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/iconSkills"
            app:layout_constraintStart_toEndOf="@id/iconSkills"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/skillsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=".NET, Visual Basic, C#, JavaScript"
            app:layout_constraintTop_toBottomOf="@id/skillsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
